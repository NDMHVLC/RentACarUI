@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="col-md-12">
        <h1 class="mt-4">Yeni Kullanıcı Kaydı Ekle</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="/Home/Index">Admin Paneli</a></li>
            <li class="breadcrumb-item"><a href="/Customer/Index">Customer</a></li>
            <li class="breadcrumb-item active">Kullanıcı Kaydı Ekle</li>
        </ol>
    </div>
    <div class="col-12">
        <div class="row g-4">
            <div class="col-sm-12 col-xl-6">
                <div class="bg-secondary rounded h-100 p-4" ng-app="customeraddapp" ng-controller="customerAddController">

                    <div class="mb-3">
                        <label class="form-label">TC No</label>
                        <input type="text" class="form-control" ng-model="customer.tcNo">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ad</label>
                        <input type="text" class="form-control" ng-model="customer.name">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Soyad</label>
                        <input type="text" class="form-control" ng-model="customer.surname">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mail</label>
                        <input type="text" class="form-control" ng-model="customer.eMail">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Parola</label>
                        <input type="text" class="form-control" ng-model="customer.password">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Telefon Numarası</label>
                        <input type="text" class="form-control" ng-model="customer.phoneNumber">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Adres</label>
                        <input type="text" class="form-control" ng-model="customer.address">
                    </div>
                     <div class="mb-3">
                    <label>Lütfen Bir Rezervasyon Seçiniz</label>
                        <select class="form-control" ng-model="customer.customerId">
                            <option ng-repeat="reservation in ReservationList" ng-value="{{reservation.id}}">{{reservation.comment}}</option>
                    </select>
                    </div>
                    <div class="form-group">
                        <a ng-click="CustomerAdd()" class="btn btn-primary">Kaydet</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/pages/customerAdd.js"></script>
}

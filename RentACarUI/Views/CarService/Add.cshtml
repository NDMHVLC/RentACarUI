@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="col-md-12">
        <h1 class="mt-4">Yeni Servis Kaydı Ekle</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="/Home/Index">Admin Paneli</a></li>
            <li class="breadcrumb-item"><a href="/CarService/Index">Servis</a></li>
            <li class="breadcrumb-item active">Servis Kaydı Ekle</li>
        </ol>
    </div>
    <div class="col-12">
        <div class="row g-4">
            <div class="col-sm-12 col-xl-6">
                <div class="bg-secondary rounded h-100 p-4" ng-app="carserviseaddapp" ng-controller="carServiceAddController">

                    <div class="mb-3">
                        <label class="form-label">Giriş Tarihi</label>
                        <input type="datetime-local" class="form-control" ng-model="carService.entryDate">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Çıkış Tarihi</label>
                        <input type="datetime-local" class="form-control" ng-model="carService.releaseDate">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Açıklama</label>
                        <input type="text" class="form-control" ng-model="carService.comment">
                    </div>
                    <div class="form-group">
                        <a ng-click="CarServiceAdd()" class="btn btn-primary">Kaydet</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/pages/carServiceAdd.js"></script>
}
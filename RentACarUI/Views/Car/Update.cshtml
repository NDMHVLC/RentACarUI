@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="col-md-12">
        <h1 class="mt-4">Araba Kaydı Düzenle</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="/Home/Index">Admin Paneli</a></li>
            <li class="breadcrumb-item"><a href="/Car/Index">Araba</a></li>
            <li class="breadcrumb-item active">Araba Kaydı Düzenle</li>
        </ol>
    </div>
    <div class="col-12">
        <div class="row g-4">
            <div class="col-sm-12 col-xl-6">
                <div class="bg-secondary rounded h-100 p-4" ng-app="carupdateapp" ng-controller="carUpdateController">

                    <div class="mb-3">
                        <label class="form-label">Marka</label>
                        <input type="text" class="form-control" ng-model="car.brand">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Model</label>
                        <input type="text" class="form-control" ng-model="car.model">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Yakıt Tipi</label>
                        <input type="text" class="form-control" ng-model="car.fuelType">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Km</label>
                        <input type="text" class="form-control" ng-model="car.km">
                    </div>
                    <div class="mb-3">
                        <label>Lütfen Bir Reservasyon Seçiniz</label>
                        <select class="form-control" ng-model="car.carServiceId">
                            <option ng-repeat="carService in CarServiceList" ng-value="{{carService.id}}">{{carService.comment}}</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <a ng-click="CarUpdate()" class="btn btn-primary">Güncelle</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/pages/carUpdate.js"></script>
}
